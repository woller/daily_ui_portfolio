<div class="w-full h-full flex rounded-xl overflow-hidden">
  <div class="w-1/3 challenge-001-pattern p-12">
    <h1 class="text-4xl">That <span class="font-extrabold text-transparent bg-clip-text bg-gradient-to-br from-purple-500 to-pink-500">Bird</span> Site</h1>

    <%= form_with url: "#", class: "space-y-4" do |form| %>
      <div class="flex flex-col space-y-1">
        <%= form.label :name, class: "text-sm font-medium text-gray-800" %>
        <%= form.text_field :name, class: "w-56 rounded border-gray-400 focus:ring-purple-500 focus:border-purple-500 transition-colors duration-200" %>
      </div>

      <div class="flex flex-col space-y-1">
        <%= form.label :email, class: "text-sm font-medium text-gray-800" %>
        <%= form.email_field :email, class: "w-64 rounded border-gray-400 focus:ring-purple-500 focus:border-purple-500 transition-colors duration-200" %>
      </div>

      <div class="flex flex-col space-y-1">
        <%= form.label :password, class: "text-sm font-medium text-gray-800" %>
        <%= form.password_field :password, class: "w-44 rounded border-gray-400 focus:ring-purple-500 focus:border-purple-500 transition-colors duration-200" %>
      </div>

      <div class="flex items-center">
        <%= form.check_box :terms_and_conditions, class: "rounded text:gray-900 focus:text-purple-500 focus:ring-purple-500 mr-2 transition-colors duration-200" %>
        <%= form.label :terms_and_conditions, "I accept the terms and conditions", class: "text-sm font-medium text-gray-800" %>
      </div>

      <div class="flex justify-end">
        <%= form.submit "Sign up", class: "px-3 py-1.5 bg-gray-900 hover:bg-purple-500 focus:bg-purple-500 focus:outline-none transition-colors duration-200 text-white rounded" %>
      </div>
    <% end %>
  </div>

  <div class="w-2/3">
    <%= image_tag "challenge-001.jpg", class: "w-full max-h-full object-cover" %>
  </div>
</div>
